  \node[xshift={25*2},yshift={25*sqrt(3)*2.1}](0,0){$\iddots$};
  %0段目
  \filldraw[fill=yellow,xshift={-25*9},yshift={25*sqrt(3)*9}] (0,0)--++(30:1)--++(90:1)--++(150:1)--++(210:1)--++(270:1)--cycle;
