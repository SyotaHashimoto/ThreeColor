% \myHed{posX}{posY}{color}{label}
% 座標(posX,posY) を最下点とした六角形を描き，中心に label を書く
% 色は color で指定
\newcommand\myHex[4]{
  \begin{scope}[xshift={#1*25},yshift={#2*25*sqrt(3)}]
    \filldraw[fill=#3] (0,0)--++(30:1)--++(90:1)--++(150:1)--++(210:1)--++(270:1)--cycle;\node (C)  at (0,1) {#4};
  \end{scope}
}
\newcommand\myHexR[2]{\myHex{#1}{#2}{\myRed}{{\color{white} R}}}
\newcommand\myHexB[2]{\myHex{#1}{#2}{\myBlue}{{\color{white} B}}}
\newcommand\myHexY[2]{\myHex{#1}{#2}{\myYellow}{Y}}
